# Copy this file to `.env` and fill the values. `.env` is gitignored by default.

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Cloudinary Configuration (for image uploads)
NEXT_PRIVATE_CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Firebase Admin SDK - Service Account (Local Use Only) ⚠️
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_ADMIN_PRIVATE_KEY=your_private_key_with_newlines
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email
FIREBASE_ADMIN_CLIENT_ID=your_client_id
FIREBASE_ADMIN_CLIENT_X509_CERT_URL=your_cert_url

RESEND_API_KEY=your_resend_api_key